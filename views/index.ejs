<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA.Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <title>todo list</title>
</head>
<body>
    <div class ="container">
        <h1>lista de quehaceres</h1>
        <form action="/" method="post" autocomplete="off">
            <input type="text" placeholder="agregar actividades por hacer "name="todovalue" required>
            <button type="submit">Add</button>

        </form>
        <% if(data) { %>
            <%data.forEach(todovalue =>{%>
                <div class="todo-container">
                    <div class="todo-value">  </div>
                    <div>
                        <a class="todo-delete">Delete</a>
                    </div>
                </div>

            })%>
        }%>
    </div>
    <script>
        const DeleteButton = document.querySelectorAll(".todo-delet")

        DeleteButton.forEach((button, i) => {
            button.addEventlistener("click" ,()=>{
                const endpoind = `/${button.classList}`
                fetch(endpoind, {
                    method:"delete"
                })
            })

        })
    </script>
</body>
</html>